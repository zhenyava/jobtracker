{
  "manifest_version": 3,
  "name": "Job Tracker Extension",
  "version": "1.0.0",
  "description": "Helper extension for Job Tracker SaaS",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.svg"
  },
  "icons": {
    "16": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  },
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "permissions": [
    "cookies",
    "scripting",
    "activeTab",
    "storage"
  ]
}
